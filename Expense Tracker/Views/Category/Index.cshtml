@model IEnumerable<Expense_Tracker.Models.Category>

@{
    ViewData["PageTitle"] = "Categories";
    ViewData["PageActionText"] = "Add New Category";
    ViewData["PageActionURL"] = "/Category/AddorEdit/";
}

<div class="row">
    <div class="col-md-7 e-grid">
        <ejs-grid id="categoties" dataSource="@Model" gridLines="None" allowSorting="true" allowPaging="true">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Category" field="TitleWithIcon" width="100px"></e-grid-column>
                <e-grid-column headerText="Type" template="#columntemplate" width="100px"></e-grid-column>
                 <e-grid-column headerText="Actions" template="#Actiontemplate" width="100px"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
    <div class="col-md-5" >
        <div class="widget h-100 d-flex justify-content-center align-items-center" style="background-color:#212b36">
            <i class="fa-solid fa-shapes fa-2xl"></i>
        </div>
    </div>
</div>
<script id="columntemplate" type="text/x-template">
    ${if (Type == "Income")}
        <span class="badge bg-success">${Type}</span>
    ${else}
        <span class="badge bg-danger">${Type}</span>
    ${/if}
</script>
<script id="Actiontemplate" type="text/x-template">
   <div class="d-flex flex-column justify-content-evenly">
        <a class="btn no-a-decoration btn-sm" href="/Category/AddorEdit/${CategoryId}">
            <i class="fa-solid fa-pen fa-lg"></i>
       </a>
         <a class="btn no-a-decoration btn-sm" href="/Category/Delete/${CategoryId}">
              <i class="fa-solid fa-trash fa-lg"></i>
        </a>
   </div>
</script>